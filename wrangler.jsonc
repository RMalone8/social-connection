{
	"$schema": "node_modules/wrangler/config-schema.json",
	"name": "social-connection",
	"main": "worker/index.js",
	"compatibility_date": "2025-07-26",
	"assets": {
		"directory": "./dist",
		"not_found_handling": "single-page-application",
		"run_worker_first": [
			"/api/*"
		]
	},
	"dev": {
		"port": 8787
	},
	"observability": {
		"enabled": true
	},
	/**
	 * D1 Database Configuration
	 * Replace database_id with your actual database ID from Step 1
	 */
	"d1_databases": [
		{
			"binding": "DB",
			"database_name": "social_connection_prod",
			"database_id": "a8a8b957-b1b5-4ab4-956a-bc7d73cebf22"
		}
	],
	/**
	 * Environment Variables for Social Media OAuth
	 * Set these values using 'wrangler secret put' command:
	 * wrangler secret put GITHUB_CLIENT_SECRET
	 * wrangler secret put INSTAGRAM_CLIENT_SECRET
	 * Or add them to your .dev.vars file for local development
	 */
	"vars": {
		"GITHUB_CLIENT_ID": "Ov23liyFnzqrCBTrkIhX",
		"GITHUB_REDIRECT_URI": "https://social.moose.boston/api/link/github/callback",
		"SPOTIFY_CLIENT_ID": "fb93e89c3374464992c103ffa45b1a65",
		"SPOTIFY_REDIRECT_URI": "https://social.moose.boston/api/link/spotify/callback",
		"EMAIL_FROM": "no-reply@social.moose.boston"
	}
